#include<iostream>
using namespace std;

int Fib(int n){
    if (n<2){
        return 1;
    }
    return Fib(n-2)+Fib(n-1); 
}

int Factorial(int n){
    if (n<=1){
        return 1;
    }
    
    return n*Factorial(n-1);
}

int main(){
    //Factorial of number
    //6!= 6*5*4*3*2*1= 720
    // by defination 0!=1
    //1!=1
    // n!= n*(n-1)!
    int a;
    cout<<"Enter the number"<<endl;
    cin>>a;
    //cout<<"The factorial of " <<a<< " is " <<Factorial(a);
    cout<<"The term in fibonacci sequence at position " <<a<< " is " <<Fib(a);
    return 0;
}
